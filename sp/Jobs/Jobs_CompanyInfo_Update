CREATE OR REPLACE FUNCTION Jobs_CompanyInfo_Update(
_id integer,
_CompanyName VARCHAR,
_CompanyAdress varchar,
_CompanyWebsite varchar,
_CompanyAbout varchar,
_CompanyOtherDetails1 varchar,
_CompanyOtherDetails2 varchar,
_User_id integer,
prev varchar,
RequestedOperation VARCHAR,
by_user INTEGER,
ip VARCHAR,
OUT result INTEGER,
OUT rescode INTEGER
) RETURNS RECORD AS $$
DECLARE 
    temp INTEGER;
    varrec RECORD;
BEGIN 
temp := 0;

IF NOT EXISTS ( SELECT id FROM "jobs_companyinfo" WHERE id=_id) THEN
	result := -4;
  	rescode := 161;
	RETURN;
END IF;

IF EXISTS ( SELECT id FROM "jobs_companyinfo" WHERE "CompanyName"=_CompanyName and id<>_id) THEN
	result := -3;
  	rescode := 200;
	RETURN;
END IF;

SELECT * INTO varrec FROM CheckUserForPermission(by_user,RequestedOperation,'companyinfo','jobs');
IF varrec.result <> 1 THEN
	rescode :=  varrec.rescode;
	result := -2;
	RETURN;
END IF;

update 
"jobs_companyinfo"
set
"CompanyName"=_CompanyName,
"CompanyAdress"=_CompanyAdress,
"CompanyWebsite"=_CompanyWebsite,
"CompanyAbout"=_CompanyAbout,
"CompanyOtherDetails1"=_CompanyOtherDetails1,
"CompanyOtherDetails2"=_CompanyOtherDetails2,
"User_id"=_User_id
where id=_id;
GET DIAGNOSTICS temp := ROW_COUNT;
IF temp <> 1 THEN 
	rescode := 162;
	result := -1;
        RETURN;
END IF;

rescode := _id;

INSERT INTO "jobs_jobslogs"("LogsUser_id", "ContentType_id", "LogsObject", "LogsPermission_id", "LogsIP", "LogsTimeStamp", "LogsDescription","LogsPreviousState")
VALUES (by_user,varrec.var_ctid,rescode,varrec.varpci,ip,now(),'UPDATE',prev);
GET DIAGNOSTICS temp := ROW_COUNT;
IF temp <> 1 THEN 
	rescode := 999;
	result := -1;
        RETURN;
ELSE
	result := 1;
RETURN;
END IF;
END;
$$ LANGUAGE plpgsql;


