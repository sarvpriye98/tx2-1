CREATE OR REPLACE FUNCTION CommunicationTemplateInsert(

CommTypeID INTEGER,
CommTempName VARCHAR,  
CommTempDesc VARCHAR,
CommTempFormat VARCHAR,
ParamList VARCHAR,
RequestedOperation VARCHAR,
by_user INTEGER,
_ip VARCHAR,
OUT result INTEGER,
OUT rescode INTEGER
) RETURNS RECORD AS $$
DECLARE 
    temp INTEGER;
    varrec RECORD;
BEGIN 
temp := 0;


IF EXISTS ( SELECT id FROM "Communication_communicationtemplate" WHERE "TemplateName"=CommTempName) THEN
	result := 2;
  	rescode := 201;
	RETURN;
END IF;

SELECT * INTO varrec FROM CheckUserForPermission(by_user,RequestedOperation,'communicationtemplate','Communication');
IF varrec.result <> 1 THEN
	rescode :=  varrec.rescode;
	result := -2;
	RETURN;
END IF;

INSERT INTO "Communication_communicationtemplate"( "CommunicationType_id", "TemplateName","TemplateDisc", "TemplateFormat", "paramList")
    						VALUES (CommTypeID,CommTempName,CommTempDesc,CommTempFormat,ParamList);

GET DIAGNOSTICS temp := ROW_COUNT;
IF temp <> 1 THEN 
	rescode := 202;
	result := -1;
        RETURN;
END IF;

SELECT id INTO rescode FROM "Communication_communicationtemplate" WHERE "TemplateName"=CommTempName;


INSERT INTO "Communication_communicationlogs"( "LogsUser_id","ContentType_id", "LogsObject", "LogsPermission_id","LogsIP", "LogsTimeStamp","LogsDescription")
					VALUES(by_user,varrec.var_ctid,rescode,varrec.varpci,_ip,now(),'CommTemplateInsert');
GET DIAGNOSTICS temp := ROW_COUNT;
IF temp <> 1 THEN 
	rescode := 999;
	result := -1;
        RETURN;
ELSE
	result := 1;
RETURN;
END IF;
END;
$$ LANGUAGE plpgsql;


